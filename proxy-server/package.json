{
  "name": "ddb-foundry-proxy",
  "version": "1.0.0",
  "description": "Proxy server for D&D Beyond Enhanced Importer - bypasses CORS restrictions",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "build:win": "pkg . --targets node18-win-x64 --output dist/ddb-proxy-windows.exe",
    "build:mac": "pkg . --targets node18-macos-x64 --output dist/ddb-proxy-macos",
    "build:linux": "pkg . --targets node18-linux-x64 --output dist/ddb-proxy-linux",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux"
  },
  "keywords": [
    "foundry",
    "dnd",
    "dndbeyond",
    "proxy",
    "cors"
  ],
  "author": "Sir Ogre God",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "node_modules/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ]
  }
}
